    #pic {
        border-radius: 5px;
        border: 2px solid white;
        size: 13px;
    }

</style>
</head>
<body>

<div container>
    <h1><%= theManga.name %></h1>
    <img id = "pic" src = "<%= theManga.img%>"height='450' width='auto'/>
    <ul>
        <li>Mangka: <%= theManga.Arthur %></li>
        <li>Genre: <%=theManga.Genre%></li>
        <li>Demographic: <%= theManga.Demographic %></li>
        <li>Number of Volumes: <%= theManga.Volumes %></li>
        <li>Rating: <%= theManga.Rating %></li>
    </ul>

        <form action = "/manga">
            <button>Go Back</button>
        </form>
</div>

